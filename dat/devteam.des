[30%]: OBJECT:"grappling hook",(30,17)
[30%]: OBJECT:"rubber hose",(30,17)
[30%]: OBJECT:"tin opener",(30,17)

# snack area
$snackrack = { (32,01),(33,01),(34,01) }
